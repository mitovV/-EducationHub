@model EducationHub.Data.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1  class="center light-green-text lighten-2">Edit</h1>

<h4  class="center light-green-text lighten-2">Category</h4>

<div class="row">
    <div class="col s6 center offset-s3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="red-text"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="center light-green-text lighten-2"/>
                <span asp-validation-for="Name" class="red-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUrl" ></label>
                <input asp-for="PictureUrl" class="center light-green-text lighten-2" />
                <span asp-validation-for="PictureUrl" class="red-text"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="collection-item">
                <label asp-for="DeletedOn" ></label>
                <input asp-for="DeletedOn" />
                <span asp-validation-for="DeletedOn"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="collection-item">
                <label asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn"  class="center light-green-text lighten-2"/>
                <span asp-validation-for="CreatedOn"></span>
            </div>
            <div class="collection-item">
                <label asp-for="ModifiedOn" ></label>
                <input asp-for="ModifiedOn" />
                <span asp-validation-for="ModifiedOn" ></span>
            </div>
            <div >
                <input type="submit" value="Save" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

