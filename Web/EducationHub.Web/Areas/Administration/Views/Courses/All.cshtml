@model IEnumerable<EducationHub.Web.ViewModels.Administration.CourseAdminViewModel>

@{
    ViewData["Title"] = "Courses";
}

<h1 class="center light-green-text lighten-2">Courses</h1>

<p class="center">
    <a class="center light-green-text lighten-2" asp-action="Create">Create New</a>
</p>
<table class="responsive-table centered highlight grey lighten-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @if (item.IsDeleted == false)
                    {
                        @:No
                    }
                    else
                    {
                        @:Yes
                    }
                </td>
                <td>
                    @if (item.DeletedOn == null)
                    {
                        @:No record
                    }
                    else
                    {
                        @item.DeletedOn
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @if (item.ModifiedOn == null)
                    {
                        @:No record
                    }
                    else
                    {
                        @item.ModifiedOn
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
