@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="center light-green-text lighten-2">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col s6 center offset-s3">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="red-text"></div>
            <div class="center">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="center light-green-text lighten-2"/>
                <span asp-validation-for="Input.OldPassword" class="red-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="center light-green-text lighten-2"/>
                <span asp-validation-for="Input.NewPassword" class="red-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="center light-green-text lighten-2" />
                <span asp-validation-for="Input.ConfirmPassword" class="red-text"></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light light-green lighten-2">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}