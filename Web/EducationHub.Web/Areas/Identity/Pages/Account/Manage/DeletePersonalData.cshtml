@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="center light-green-text lighten-2">@ViewData["Title"]</h4>

<div class="center red-text lighten-2">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div class="row">
    <div class="col s6 center offset-s3">
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="center red-text"></div>
            @if (Model.RequirePassword)
            {
                <div class="input-field">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="center light-green-text lighten-2" />
                    <span asp-validation-for="Input.Password" class="red-text"></span>
                </div>
            }
            <div class="center">
                <button class="btn waves-effect waves-red red darken-4" type="submit"><i class="material-icons left">warning</i>Delete data and close my account</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}