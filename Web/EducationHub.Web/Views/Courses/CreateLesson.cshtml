@using static EducationHub.Data.Common.Validations.DataValidation.Lesson
@model EducationHub.Web.ViewModels.Courses.CreateLessonInCourseInputModel
@{
    ViewData["Title"] = "Create Lesson";
}

<h1 class="center light-green-text lighten-2">@ViewData["Title"]</h1>
<h4 class="center light-green-text lighten-2">Course: @Model.CourseTitle</h4>
<partial name="_TinyMCEPartial" />
<div class="row">
    <div class="col s6 center offset-s3">
        <form method="post">
            <div class="center red-text" asp-validation-summary="All"></div>
            <input asp-for="CategoryId" hidden />
            <input asp-for="CourseId" hidden />
            <div class="input-field">
                <label asp-for="@Model.CategoryName" class="light-green-text lighten-2"></label>
                <input asp-for="@Model.CategoryName" readonly/>
            </div>
            <div class="input-field">
                <input asp-for="Title" class="validate character-counter" data-length="@TitleMaxLength">
                <label asp-for="Title" class="light-green-text lighten-2"></label>
                <span asp-validation-for="Title" class="red-text center"></span>
            </div>
            <div class="input-field">
                <input asp-for="VideoUrl" class="validate character-counter" data-length="@VideoUrlMaxLength">
                <label asp-for="VideoUrl" class="light-green-text lighten-2"></label>
                <span asp-validation-for="VideoUrl" class="red-text center"></span>
            </div>
            <div class="input">
                <label asp-for="Description" class="light-green-text lighten-2"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="red-text center"></span>
            </div>
            <div>
                <button type="submit" class="btn waves-effect waves-light lighten-2 light-green">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/charactersCounter.js"></script>
}