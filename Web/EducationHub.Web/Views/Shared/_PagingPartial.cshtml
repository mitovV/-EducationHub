@model BasePagingViewModel

@if (this.Model.ItemsCount > this.Model.ItemsPerPage)
{
    <ul class="pagination center">
        @if (Model.PagesCount > 4)
        {
            <li>
                <a asp-action="@Model.Actoin" asp-route-id="@Model.RouteId" asp-route-page="1"><i class="fas fa-angle-double-left"></i></a>
            </li>
        }
        <li class="@if (!Model.HasPreviousPage) {<text>disabled</text>}">

            <a asp-action="@Model.Actoin" asp-route-id="@Model.RouteId" asp-route-page="@Model.PreviousPageNumber"><i class="material-icons">chevron_left</i></a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="waves-effect"><a asp-action="@Model.Actoin" asp-route-id="@Model.RouteId" asp-route-page="@i">@i</a></li>
            }
        }
        <li class="waves-effect green lighten-2 active">
            <a>
                @Model.PageNumber
            </a>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="waves-effect"><a asp-action="@Model.Actoin" asp-route-id="@Model.RouteId" asp-route-page="@i">@i</a></li>
            }
        }
        <li class="waves-effect @if (!Model.HasNextPage) {<text>disabled</text>}">
            <a asp-action="@Model.Actoin" asp-route-id="@Model.RouteId" asp-route-page="@Model.NextPageNumber">
                <i class="material-icons">chevron_right</i>
            </a>
        </li>
        @if (Model.PagesCount > 4)
        {
            <li>
                <a asp-action="@Model.Actoin" asp-route-id="@Model.RouteId" asp-route-page="@Model.PagesCount"><i class="fas fa-angle-double-right"></i></a>
            </li>
        }
    </ul>
}