@model EducationHub.Web.ViewModels.Users.UserBadgeViewModel
<div class="card-panel green lighten-3 z-depth-1">
    <div class="row valign-wrapper">
        <div class="col s2">
            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id"><img src="@Model.PictureUrl" alt="user picture" class="circle responsive-img"></a>
        </div>
        <div class="col s10">
            <div>
                 <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id">
                <span class="white-text">
                    Created by: @Model.Username
                </span>
                </a>
            </div>
            <div>
                <span class="white-text">
                    Votes: <span id="votes">@Model.Votes</span>
                </span>
            </div>
            <div class="form-group">
                <span class="text-warning">
                    <i class="ratingStar fas fa-star" data-vote="1"></i>
                    <i class="ratingStar far fa-star" data-vote="2"></i>
                    <i class="ratingStar far fa-star" data-vote="3"></i>
                    <i class="ratingStar far fa-star" data-vote="4"></i>
                    <i class="ratingStar far fa-star" data-vote="5"></i>
                </span>
                <span class="white-text" id="average-vote-value">@Model.AvarageVoteAsString</span><span class="white-text">/5</span>
            </div>
        </div>
    </div>
</div>