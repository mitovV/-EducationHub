@model EducationHub.Web.ViewModels.Categories.CategoryDetailsViewModel
@{
    ViewData["Title"] = "Details";
    var noResurses = "<p class=\"center grey-text text-lighten-5\">No resources yet.</p>";
    var disabled = "disabled";
    var coursesCountBtn = Model.CoursesCount < 1 ? disabled : "";
    var lessonsCountBtn = Model.NotRelatedLessons < 1 ? disabled : "";
}

<h1 class="center light-green-text lighten-2">@ViewData["Title"]</h1>

<div class="row">
    <div class="col s12 m4 l4 offset-l1">
        <div class="card">
            <div class="card-image">
                <img src="~/Images/courses.jpg" height="350">
                <a asp-controller="Courses" asp-action="ByCategory" asp-route-id="@Model.Id" class="btn-floating btn-large halfway-fab waves-effect waves-light pulse yellow darken-1 @coursesCountBtn"><i class="material-icons">info</i></a>
            </div>
            <div class="card-content green lighten-2">
                @if (Model.CoursesCount < 1)
                {
                    @Html.Raw(noResurses);
                }
                else
                {
                    <p class="center grey-text text-lighten-5">This category has @Model.CoursesCount courses.</p>
                }
            </div>
        </div>
    </div>
    <div class="col s12 m4 l4 offset-l1">
        <div class="card">
            <div class="card-image">
                <img src="~/Images/lessons.jpg" height="350">
                <a asp-controller="Lessons" asp-action="ByCategory" asp-route-id="@Model.Id" class="btn-floating btn-large halfway-fab waves-effect waves-light pulse yellow darken-1 @lessonsCountBtn"><i class="material-icons">info</i></a>
            </div>
            <div class="card-content green lighten-2">
                @if (Model.NotRelatedLessons < 1)
                {
                    @Html.Raw(noResurses);
                }
                else
                {
                    <p class="center grey-text text-lighten-5">This category has @Model.NotRelatedLessons lessons that are not related to a course.</p>
                }
            </div>
        </div>
    </div>
</div>

